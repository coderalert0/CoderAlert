<%= link_to 'Delete', article_path(@article), :method => 'delete', class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete the article #{@article.title}?"} %>

<%= bootstrap_form_for @form, :url => article_path, :method => :put do |f| %>
  <%= f.text_field :title, :label_class => 'required' %>
  <%= f.text_area :content, :label_class => 'required' %>

  <%= f.file_field :attachments, multiple: true %>

  <%= submit_tag t(:submit), :class => 'btn btn-success' %>
<% end %>