<h2>Create an Article</h2>

<%= bootstrap_form_for @form, :url => project_articles_path(@project) do |f| %>
  <%= f.text_field :title, :label_class => 'required' %>

  <div class="form-group row">
    <%= f.label :content, :class => 'col-sm-2 required' %>
    <div class='col-sm-7'>
      <%= f.rich_text_area :content %>
    </div>
  </div>

  <br/>

  <%= f.file_field :attachments, multiple: true %>

  <%= submit_tag t(:submit), :class => 'btn btn-success' %>
<% end %>