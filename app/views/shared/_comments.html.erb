<% if commentable.comments.present? %>
  <div class="font-weight-bold mt-5 mb-3"><i class="ti-comment"> </i><%= t(:comments) %>:</div>

  <% commentable.comments.each do |comment| %>
    <div>
      <span class="icon-holder float-right">
        <%= link_to send("project_#{commentable.object.class.name.snakify}_comment_path", @project, commentable, comment ), :method => 'delete' do %>
          <%=  content_tag(:i, '', class: 'ti-trash') %>
        <% end %>
      </span>

      <%= t(:user_added_a_comment_on_date, :user => comment.user.full_name, :date_time => comment.created_at_display).html_safe %>


      <%= comment.content %>
    </div>

    <% unless comment == commentable.comments.last %>
      <hr/>
    <% end %>

  <% end %>
<% end %>

<div class="mt-3">
  <%= bootstrap_form_for @comment_form, :url => send("project_#{commentable.object.class.name.snakify}_comments_path", @project, commentable), :layout => :vertical do |f| %>
    <%= f.text_area :content, :rows => 4, :hide_label => true %>
    <%= button_tag(type: "submit", :class => 'btn btn-light border') do %>
      <i class="ti-comment-alt"> </i><%= t(:comment) %>
    <% end %>
  <% end %>
</div>