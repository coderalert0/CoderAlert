<h2>Resend unlock instructions</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, label_col: 'col-sm-2', control_col: 'col-sm-6') do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit t(:submit), :class => 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
