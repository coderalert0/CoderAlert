<h2 class="mb-4">Change your password</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal, label_col: 'col-sm-3', control_col: 'col-sm-6') do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, label: 'New Password', autofocus: true, autocomplete: "new-password", help: t("devise.registrations.minimum_password_length_help_text", :length => @minimum_password_length) %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= submit_button %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
