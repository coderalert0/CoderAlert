<h2>Forgot your password?</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, label_col: 'col-sm-2', control_col: 'col-sm-6') do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
