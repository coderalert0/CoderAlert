<h2><%= t(:title, :scope => :edit_account_settings) %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :horizontal) do |f| %>
  <div class="row">
    <div class="col-sm-8">
      <%= f.text_field :first_name, :required => false %>

      <%= f.text_field :last_name, :required => false %>

      <%= f.text_field :title %>

      <%= f.time_zone_select :time_zone %>

      <%= f.check_box :pto, { label: t(:pto, :scope => :user), custom: true }, 'true', 'false' %>

<!--      <br/>-->

      <%#= f.email_field :email, :required => false, autofocus: true, autocomplete: "email" %>

      <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<!--        <div>Currently waiting confirmation for: <%#= resource.unconfirmed_email %></div>-->
      <%# end %>

      <%#= f.password_field :password, :required => false, autocomplete: "new-password", help: t(:password_help_text, :minimum_password_length => @minimum_password_length, :scope => :edit_account_settings) %>

      <%#= f.password_field :password_confirmation, autocomplete: "new-password" %>

    </div>

    <div class="col-sm-4">
      <% if @user.profile_image.attached? %>
        <%= resource.decorate.profile_image_display('300x300', 'mb-3') %>
      <% end %>

      <br/>
      <%= f.file_field :profile_image, hide_label: true %>
    </div>
  </div>

  <div class="actions">
    <%= submit_button %>
  </div>
<% end %>

