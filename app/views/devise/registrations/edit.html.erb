<h2>Edit Account Settings</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :vertical) do |f| %>
  <div class="row">
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.label :password, "Password".html_safe %>
      <%= f.password_field :password, hide_label: true, autocomplete: "new-password", help: "#{@minimum_password_length} characters minimum. Leave blank if you dont want to change it" %>

      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

      <%= f.label :current_password, "Current Password".html_safe %>
      <%= f.password_field :current_password, hide_label: true, autocomplete: "current-password", help: 'We need your current password to confirm your changes' %>
    </div>

    <div class="col-sm-4">
      <% if @user.profile_image.attached? %>
        <%= image_tag resource.profile_image.variant(resize: '300x300>'), :class => 'mx-auto d-block' %>
    <% end %>
      <%= f.file_field :profile_image %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => 'btn btn-success' %>
  </div>
<% end %>

<p>
  <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure you want to cancel your account?" }, method: :delete %>
</p>
