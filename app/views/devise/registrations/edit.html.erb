<h2><%= t(:title, :scope => :edit_account_settings) %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :vertical) do |f| %>
  <div class="row">
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.label :password %>
      <%= f.password_field :password, hide_label: true, autocomplete: "new-password", help: t(:password_help_text, :minimum_password_length => @minimum_password_length, :scope => :edit_account_settings) %>

      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

      <%= f.label :current_password, "Current Password".html_safe %>
      <%= f.password_field :current_password, hide_label: true, autocomplete: "current-password", help: t(:current_password_help_text, :scope => :edit_account_settings) %>
    </div>

    <div class="col-sm-4">
      <% if @user.profile_image.attached? %>
        <%= image_tag resource.profile_image.variant(resize: '300x300>'), :class => 'mx-auto d-block' %>
      <% end %>

      <br/>
      <%= f.file_field :profile_image, hide_label: true %>
    </div>
  </div>

  <div class="actions">
    <%= submit_button %>
  </div>
<% end %>

