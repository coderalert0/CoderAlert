<h2 class="mb-4">Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal, label_col: 'col-sm-3', control_col: 'col-sm-8') do |f| %>

    <%= f.text_field :first_name, autofocus: true %>

    <%= f.text_field :last_name, autofocus: true %>

    <%= f.fields_for :company do |company_fields| %>
      <%= company_fields.text_field :name, label: t(:company) %>
    <% end %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <%= f.password_field :password, autocomplete: "new-password", help: t("devise.registrations.minimum_password_length_help_text", :length => @minimum_password_length) %>

    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

    <%= f.select :time_zone, options_for_select(ActiveSupport::TimeZone.all.map { |tz| [ tz, tz.name ] }, :selected => browser_time_zone.name), { :label_class => 'required', :control_col  => 'col-md-8' } %>


  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn btn-success' %>
  </div>
<% end %>