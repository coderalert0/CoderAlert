<h2 class="mb-4">Loginz</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal, label_col: 'col-sm-3', control_col: 'col-sm-6') do |f| %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="form-group">
    <%= f.check_box :remember_me, custom: true %>
  </div>

  <div class="form-group">
    <%= f.submit 'Login', :class => 'btn btn-success' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
