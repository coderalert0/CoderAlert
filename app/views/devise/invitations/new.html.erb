<h2><%= t("devise.invitations.new.header") %></h2>

<%= bootstrap_form_for @form, :url => user_invitation_path, :method => 'post' do |f| %>

  <div class="field">
    <%= f.text_field :first_name, :label_class => 'required' %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, :label_class => 'required' %>
  </div>

  <div class="field">
    <%= f.text_field :email, :label_class => 'required' %>
  </div>

  <%= f.collection_check_boxes :project_ids, @projects, :id, :name, :label_class => 'required', custom: true %>

  <br/>

  <div>
    <%= f.submit t(:submit_and_invite_more, :scope => :invite_a_team_member), :class => 'btn btn-outline-dark' %>
    <%= f.submit t("devise.invitations.new.submit_button"), :class => 'btn btn-success' %>
  </div>
<% end %>
