<h2><%= t "devise.invitations.new.header" %></h2>

<%= bootstrap_form_for @form, :url => user_invitation_path, :method => 'post' do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :first_name, :label_class => 'required' %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, :label_class => 'required' %>
  </div>

  <% resource.class.invite_key_fields.each do |field| -%>
    <div class="field">
      <%= f.text_field field, :label_class => 'required' %>
    </div>
  <% end -%>

  <h4>Projects</h4>

  <%= f.collection_check_boxes :project_ids, @projects, :id, :name, :label_class => 'required' %>

  <div class="actions">
    <%= f.submit t("devise.invitations.new.submit_button") %>
  </div>
<% end %>
