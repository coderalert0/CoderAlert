<h2><%= t "devise.invitations.edit.header" %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }, label_col: 'col-sm-4', control_col: 'col-sm-6') do |f| %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <%= f.select :time_zone, options_for_select(ActiveSupport::TimeZone.all.map { |tz| [ tz, tz.name ] }, :selected => browser_time_zone.name), { :include_blank => true, :label_class => 'required' } %>
  <% end %>

  <div class="actions">
    <%= submit_button %>
  </div>
<% end %>
