<%= bootstrap_form_for @form, :url => contact_path, :method => :put, :remote => true do |f| %>
  <div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">Edit Contact Information</h4>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>

  <div class="modal-body">
    <%= f.select :type, options_for_select(Contact.descendants.map { |c| [t(c.name.snakify.to_sym, :scope => :contact), c.name]} ), :label_class => 'required' %>
    <%= f.text_field :value, :label_class => 'required' %>
    <%= f.form_group :alerts, help: "This setting will apply to all projects, you can override individual projects from 'Notification Settings'" do %>
      <%= f.check_box :alerts, { custom: true }, 'true', 'false' %>
    <% end %>
  </div>

  <div class="modal-footer">
    <%= link_to 'Delete', contact_path(@contact), :method => 'delete', class: 'btn btn-outline-dark', data: {confirm: "Are you sure you want to delete this contact information?"} %>
  <%= submit_tag t(:submit), :class => 'btn btn-success' %>
  </div>
<% end %>
