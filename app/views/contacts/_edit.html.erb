<%= bootstrap_form_for @form, :url => contact_path, :method => :put, :remote => true do |f| %>
  <div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">Edit Contact Information</h4>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>

  <div class="modal-body">
    <%= f.select :type, options_for_select(Contact.descendants.map { |c| [t(c.name.snakify.to_sym, :scope => :contact), c.name]} ), :label_class => 'required' %>
    <%= f.text_field :value, :label_class => 'required' %>
    <%= f.form_group :alerts do %>
      <%= f.check_box :alerts, {}, 'true', 'false' %>
    <% end %>
  </div>

  <div class="modal-footer">
    <%= submit_tag t(:submit), :class => 'btn btn-success' %>
  </div>
<% end %>
