<%= bootstrap_form_for @form, :url => contacts_path, :remote => true do |f| %>
  <div class="modal-header">
    <h4 class="modal-title" id="myModalLabel"><%= t(:title, :scope => [:contact, :create]) %></h4>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>

  <div class="modal-body">
    <%= f.select :type, options_for_select(Contact.descendants.map { |c| [t(c.name.snakify.to_sym, :scope => :contact), c.name]} ), :label_class => 'required' %>
    <%= f.text_field :value, :label_class => 'required', help: t(:phone_help_text, :scope => :contact) %>
    <%= f.form_group :alerts, help: t(:alert_help_text, :scope => :contact) do %>
      <%= f.check_box :alerts, { custom: true }, 'true', 'false' %>
    <% end %>
  </div>

  <div class="modal-footer">
    <%= submit_tag t(:submit), :class => 'btn btn-success' %>
  </div>
<% end %>
