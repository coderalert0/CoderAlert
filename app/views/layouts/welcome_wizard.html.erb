<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>CoderAlert</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="app is-collapsed">

    <!-- @App Content -->
    <!-- =================================================== -->
    <div>
      <!-- ### $Topbar ### -->
      <div class="header navbar w-100">
        <div class="header-container">
          <div class="nav-left">
            <h5 class="mt-3">CoderAlert</h5>
          </div>

          <ul class="nav-right">
            <li>
              <%= link_to destroy_user_session_path, class: 'd-b td-n bgcH-grey-100 c-grey-700', method: :delete do %>
                <i class="ti-power-off"></i>
                <span>Logout</span>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      <!-- ### $App Screen Content ### -->
      <main class='main-content bgc-grey-200'>
        <div class="row gap-20 masonry pos-r">
          <div class="masonry-item col-12">
            <div class="<%= 'bgc-white w-60 p-20 bd mx-auto' unless current_page? root_path %>">

              <% if notice %>
                <p class="alert alert-success"><%= notice %></p>
              <% end %>
              <% if alert %>
                <p class="alert alert-danger"><%= alert %></p>
              <% end %>

                <%= yield %>

                <div class="mt-2 text-right">
                  <%= @progress.display %>
                </div>
            </div>
          </div>
        </div>
      </main>

      <!-- ### $App Screen Footer ### -->
      <footer class="bdT ta-c p-30 lh-0 fsz-sm c-grey-600">
        <span><%= t(:copyright, :scope => :footer) %></span>
      </footer>
    </div>
  </body>
</html>
