<h2><%= t(:title, :scope => [:ticket, :edit]) %></h2>

<%#= link_to 'Delete', ticket_path(@ticket), :method => 'delete', class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete the ticket #{@ticket.title}?"} %>

<%= bootstrap_form_for @form, :url => project_ticket_path(@current_project), :method => :put do |f| %>
  <%= f.text_field :title, :label_class => 'required' %>
  <%= f.select :assignee_id, options_for_select(@current_project.users.map { |u| [ u.ticket_assignee_select_value(@project), u.id ] }, :selected => @form.assignee_id), {help: @form.assignee_help_text, :include_blank => true} %>
  <%= f.select :priority, options_for_select(Ticket::PRIORITY.map { |p| t(p, :scope => [:ticket, :priorities]) }, :selected => @form.priority), :label_class => 'required' %>
  <%= f.select :status, options_for_select(Ticket::STATUS.map { |p| t(p, :scope => [:ticket, :statuses]) }, :selected => @form.status), :label_class => 'required' %>

  <div class="form-group row">
    <%= f.label :description, :class => 'col-sm-2 required' %>
    <div class='col-sm-7'>
      <%= f.rich_text_area :content %>
    </div>
  </div>

  <br/>

  <%= f.file_field :attachments, multiple: true %>

  <%= submit_tag t(:submit), :class => 'btn btn-success' %>
<% end %>