<div id="dataTable_wrapper" class="dataTables_wrapper">
  <div class="dataTables_length" id="dataTable_length">
    <%= link_to t(:new), new_project_ticket_path(@current_project), class: 'btn btn-primary' %>
    <br/><br/>
  </div>

  <div id="dataTable_filter" class="dataTables_filter">
  <%= bootstrap_form_for :search_tickets, url: project_tickets_path(@project), method: :get do |f| %>
    <%= f.text_field :query, label: t(:search) %>
  <% end %>
  </div>
  <br/>

  <table id="dataTable" class="table" cellspacing="0" width="100%" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
    <thead>
    <tr role="row">
      <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 5%;"><%= t(:priority, :scope => :ticket) %></th>
      <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 5%;"><%= t(:id, :scope => :ticket) %></th>
      <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 36%;"><%= t(:title, :scope => :ticket) %></th>
      <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 5%;"><%= t(:status, :scope => :ticket) %></th>
      <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 20%;"><%= t(:assignee, :scope => :ticket) %></th>
      <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 17%;"><%= t(:created) %></th>
      <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 17%;"><%= t(:updated) %></th>
    </tr>
    </thead>
    <tbody>

      <% @tickets.each do |ticket| %>
        <tr role="row" class="odd">
          <td><%= ticket.priority %></td>
          <td class="sorting_1">
            <%= link_to ticket.slug, project_ticket_path(@current_project, ticket) %>
          </td>
          <td class="sorting_1">
            <%= link_to ticket.title, project_ticket_path(@current_project, ticket) %>
          </td>
          <td><%= ticket.status %></td>
          <td><%= ticket.try(:assignee).try(:full_name) %> <%= ticket.viewed_by_assignee_icon %></td>
          <td><%= ticket.created_at.to_formatted_s(:custom_long_ordinal) %></td>
          <td><%= ticket.updated_at.to_formatted_s(:custom_long_ordinal) %></td>
        </tr>
      <% end %>

    </tbody>
  </table>

  <div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
    <%= paginate @tickets %>
  </div>
</div>