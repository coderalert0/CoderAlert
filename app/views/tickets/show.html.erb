<h3><%= @ticket.title %></h3>

<div class="row">

  <div class="col-md-8">

    <%= link_to edit_project_ticket_path(@current_project, @ticket), class: 'btn btn-light border' do %>
      <i class="ti-pencil"> </i><%= t(:edit) %>
    <% end %>

    <%= link_to t(:in_progress), '', :method => 'delete', class: 'btn btn-light border', data: {confirm: "Are you sure you want to delete the ticket #{@ticket.title}?"} %>

    <%= link_to t(:cancel, :scope => :ticket), project_ticket_path(@current_project, @ticket), :method => 'delete', class: 'btn btn-light border', data: {confirm: "Are you sure you want to delete the ticket #{@ticket.title}?"} %>

    <div class="mt-4">
      <label><%= t(:priority, :scope => :ticket) %></label>: <%= @ticket.object.priority %></br>
      <label><%= t(:status, :scope => :ticket) %></label>: <%= @ticket.status %></br>
      <label class="font-weight-bold mt-3"><%= t(:description, :scope => :ticket) %></label>:
      <%= @ticket.content %>
    </div>


    <% @ticket.attachments.each do |attachment| %>
      <%= link_to attachment.filename, rails_blob_path(attachment, disposition: "attachment") %>
    <% end %>

    <br/><br/>

    <div>
      <%= bootstrap_form_for @comment_form, :url => project_ticket_comments_path(@current_project, @ticket), :layout => :vertical do |f| %>
        <%= f.text_area :content, :label => t(:comment) %>
        <%= submit_tag t(:submit), :class => 'btn btn-light border' %>
      <% end %>
    </div>


    <% @ticket.comments.each do |comment| %>
      <%= comment.content %>

      <span class="icon-holder">
        <%= link_to project_ticket_comment_path(@project, @ticket, comment), :method => 'delete' do %>
          <i class="ti-trash"></i>
        <% end %>
      </span>
    <% end %>
  </div>

  <div class="col-md-4">
    <label><%= t(:assignee, :scope => :ticket) %>: <%= @ticket.assignee.full_name %></label>
    <label><%= t(:reporter, :scope => :ticket) %>: <%= @ticket.created_by.full_name %></label>
    <label class="mt-3"><%= t(:created_at) %>: <%= @ticket.created_at_display %></label>
    <label><%= t(:updated_at) %>: <%= @ticket.updated_at_display %></label>
  </div>


</div>