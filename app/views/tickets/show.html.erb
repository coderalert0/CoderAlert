<%= link_to 'Edit', edit_ticket_path(@ticket), class: 'btn btn-primary' %>
<%= link_to 'Delete', ticket_path(@ticket), :method => 'delete', class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete the ticket #{@ticket.title}?"} %>

<h3><%= @ticket.title %></h3>
<%= @ticket.priority %></br>
<%= @ticket.status %></br>
<%= @ticket.content %>

<br/>
<br/>

<% @ticket.attachments.each do |attachment| %>
  <%= link_to attachment.filename, rails_blob_path(attachment, disposition: "attachment") %>
<% end %>

<br/><br/>
<%= bootstrap_form_for @comment_form, :url => ticket_comments_path(@ticket), :layout => :vertical do |f| %>
  <%= f.text_area :content, :label => 'Comment' %>
  <%= submit_tag t(:submit), :class => 'btn btn-success' %>
<% end %>

<% @ticket.comments.each do |comment| %>
  <%= comment.content %>

  <span class="icon-holder">
    <%= link_to ticket_comment_path(@ticket, comment), :method => 'delete', data: {confirm: "Are you sure you want to delete this comment?"} do %>
      <i class="ti-trash"></i>
    <% end %>
  </span>
<% end %>