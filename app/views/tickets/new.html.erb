<%= bootstrap_form_for @form, :url => project_tickets_path(@project) do |f| %>
  <%= f.text_field :title, :label_class => 'required' %>
  <%= f.select :assignee_id, options_for_select(@project.users.map { |u| [ u.ticket_assignee_select_value(@project), u.id ] }, :selected => @project.on_call_user.id), {:include_blank => true} %>
  <%= f.select :priority, options_for_select(Ticket::PRIORITY.map { |p| t(p, :scope => :priority) }), :label_class => 'required' %>
  <%= f.select :status, options_for_select(Ticket::STATUS.map { |p| t(p, :scope => :status) }), :label_class => 'required' %>
  <%= f.text_area :description, :label_class => 'required' %>

  <%= submit_tag t(:submit), :class => 'btn btn-success' %>
<% end %>