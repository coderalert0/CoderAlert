<%= bootstrap_form_for @form, :url => project_alert_setting_path(@project), :method => :put, :remote => true do |f| %>
  <div class="modal-header">
    <h4 class="modal-title" id="myModalLabel"><%= t(:title, :scope => [:notification_settings, :edit]) %></h4>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>

  <div class="modal-body">
    <%= f.text_field :slack_email if @alert_setting.alertable.is_a? SlackAuthorization %>
    <%= f.select :alert, options_for_select(AlertSetting::ALERTS.map { |p| [t(p, :scope => [:notification_settings, :alerts]), p] }, :selected => @form.alert), :label_class => 'required' %>
  </div>

  <div class="modal-footer">
    <%= submit_tag t(:submit), :class => 'btn btn-success' %>
  </div>
<% end %>
