<%= bootstrap_form_for @form, :url => project_alert_setting_path(@project), :method => :put, :remote => true do |f| %>
  <div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">Edit Alert Setting</h4>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>

  <div class="modal-body">
    <%= f.select :alert, [['Yes', true], ['No', false]], :label_class => 'required' %>
  </div>

  <div class="modal-footer">
    <%= submit_tag t(:submit), :class => 'btn btn-success' %>
  </div>
<% end %>
