<h2><%= t(:title, :scope => [:welcome_wizard, :project]) %></h2>

<div class="alert alert-info">
  <%= t(:info_message, :scope => [:welcome_wizard, :project]).html_safe %>
</div>


<%= bootstrap_form_for @form, :url => wizard_path, :method => :put do |f| %>
  <% if @form.project.key.present? %>
    <%= f.text_field :name, :label_class => 'required' %>
    <%= f.text_field :key, :class => 'col-sm-3', :disabled => true %>
  <% else %>
    <%= f.text_field :name, :label_class => 'required', :class => 'js-name' %>
    <%= f.text_field :key, :class => 'col-sm-3 js-key' %>
  <% end %>

  <div class="text-right">
    <%= wizard_next_button %>
  </div>
<% end %>
