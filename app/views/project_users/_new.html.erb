<%= bootstrap_form_for @form, :url => project_project_users_path(@project) do |f| %>
  <div class="modal-header">
    <h4 class="modal-title" id="myModalLabel"><%= t(:title, :project => @project.name, :scope => [:permission_user, :modal]) %></h4>
    <button type="button" class="close" data-dismiss="modal">x</button>
  </div>

  <div class="modal-body">
    <%= f.select :user_id, options_for_select(@users.map { |u| [ u.full_name, u.id ] }), :label_class => 'required' %>
    <%= f.check_box :admin, { custom: true }, 'true', 'false' %>
    <br/>
    <%= link_to t(:invite_a_team_member, :scope => :permission_user), new_user_invitation_path %>
  </div>

  <div class="modal-footer">
    <%= submit_button %>
  </div>
<% end %>